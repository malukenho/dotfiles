[core]
	excludesfile = /Users/jamie/.gitignore
	quotepath = false
[user]
	name = Jamie White
	email = jamie@jgwhite.co.uk
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  a = add
  b = branch
  c = commit
  d = diff
  l = log \
    --color \
    --graph \
    --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' \
    --abbrev-commit \
    --
  s = status
  x = !gitx
  aa = add --all
  co = checkout
  dc = diff --cached
  wtf = !git-wtf
[merge]
  tool = vimdiff
[push]
	default = current
[branch]
	autosetuprebase = always
